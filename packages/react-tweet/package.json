{
  "name": "@innei/react-tweet",
  "version": "3.4.1",
  "repository": "https://github.com/vercel/react-tweet.git",
  "author": "Luis Alvarez (https://twitter.com/luis_fades)",
  "scripts": {
    "build": "pnpm build:swc && pnpm build:css && pnpm types",
    "build:swc": "swc src -d dist --copy-files",
    "build:css": "node scripts/bundle-css.js",
    "dev": "pnpm build:swc -w",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf dist && rm -rf .turbo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vercel/react-tweet/issues"
  },
  "sideEffects": [
    "./dist/twitter-theme/tweet-container.js"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.client.d.ts",
      "react-server": "./dist/index.js",
      "default": "./dist/index.client.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "default": "./dist/api/index.js"
    },
    "./theme.css": "./dist/twitter-theme/theme.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**/*.{js,d.ts,css}"
  ],
  "typesVersions": {
    "*": {
      "index": [
        "dist/index.client.d.ts"
      ],
      "utils": [
        "dist/utils.d.ts"
      ],
      "api": [
        "dist/api/index.d.ts"
      ],
      "*": []
    }
  },
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "index": [
          "dist/index.d.ts"
        ],
        "utils": [
          "dist/utils.d.ts"
        ],
        "api": [
          "dist/api/index.d.ts"
        ],
        "*": []
      }
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.3",
    "clsx": "^2.0.0",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "20.10.5",
    "@types/react": "^18.2.45",
    "chokidar": "^3.5.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jsdom": "^27.4.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
